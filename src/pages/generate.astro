---
import Layout from "../layouts/Layout.astro";
import { FlashcardGenerationView } from "../components/FlashcardGenerationView";
import { LogoutButton } from "../components/auth/LogoutButton";
---

<Layout title="Generuj fiszki - 10xCards.ai">
  <div class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4">
    <div class="max-w-4xl mx-auto">
      <div
        class="flex justify-between items-center mb-8 p-6 bg-white/10 backdrop-blur-xl rounded-2xl border border-white/10"
      >
        <a href="/" class="text-3xl font-bold text-white hover:text-blue-200 transition-colors">10xCards.ai</a>
        <div class="flex items-center gap-4 text-white">
          <div>
            <span class="text-blue-100/80">Witaj,</span>
            <span class="font-semibold ml-1">Użytkowniku</span>
          </div>
          <LogoutButton client:only="react" />
        </div>
      </div>

      <div class="bg-white/10 backdrop-blur-xl rounded-2xl border border-white/10 p-8">
        <div class="mb-6">
          <h1
            class="text-4xl font-bold text-white bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text mb-3"
          >
            Generuj fiszki
          </h1>
          <p class="text-blue-100/90 text-lg">
            Wklej tekst źródłowy, a nasza AI wygeneruje dla Ciebie personalizowane fiszki do nauki
          </p>
        </div>

        <FlashcardGenerationView client:load />
      </div>
    </div>
  </div>
</Layout>
